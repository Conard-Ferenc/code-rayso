{
  "name": "code-rayso",
  "repository": {
    "type": "git",
    "url": "https://github.com/Conard-Ferenc/code-rayso"
  },
  "publisher": "Conard",
  "icon": "icon.png",
  "displayName": "CodeRayso",
  "description": "Generate CodeSnap by Ray.so",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Snippets",
    "Visualization",
    "Other"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CodeRayso",
      "properties": {
        "code-rayso.theme": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "bitmap",
            "noir",
            "ice",
            "sand",
            "forest",
            "mono",
            "breeze",
            "candy",
            "crimson",
            "falcon",
            "meadow",
            "midnight",
            "raindrop",
            "sunset"
          ],
          "default": "candy",
          "markdownDescription": "%configuration.theme%"
        },
        "code-rayso.background": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%configuration.background%"
        },
        "code-rayso.darkMode": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%configuration.darkMode%"
        },
        "code-rayso.lineNumbers": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%configuration.lineNumbers%"
        },
        "code-rayso.padding": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "16",
            "32",
            "64",
            "128"
          ],
          "default": "64",
          "markdownDescription": "%configuration.padding%"
        },
        "code-rayso.languageMap": {
          "scope": "resource",
          "type": "object",
          "default": {},
          "markdownDescription": "%configuration.languageMap%"
        }
      }
    },
    "commands": [
      {
        "command": "code-rayso.openCodeSnapFromRayso",
        "title": "%command.openCodeSnapFormRayso%",
        "category": "CodeRayso"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "code-rayso.openCodeSnapFromRayso",
          "when": "editorTextFocus && editor.hasSelection"
        }
      ]
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "lint": "tsslint --project tsconfig.json",
    "lint:fix": "tsslint --project tsconfig.json --fix",
    "compile": "bun run check-types && bun run lint && bun ./scripts/build.ts",
    "watch:check-types": "tsc --noEmit --watch --project .",
    "watch": "bun ./scripts/watch.ts"
  },
  "devDependencies": {
    "@tsslint/cli": "^2.0.7",
    "@tsslint/config": "^2.0.7",
    "@tsslint/eslint": "^2.0.7",
    "@types/bun": "^1.3.5",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.103.0",
    "mocha": "^10.0.10",
    "typescript": "^5.9.2"
  },
  "author": "Conard Z",
  "license": "MIT"
}
